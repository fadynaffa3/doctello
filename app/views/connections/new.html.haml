:javascript
  $('#setup_link').addClass('active');
= stylesheet_link_tag 'setup'
#wrapper
  = render partial: 'home/sidebar'
  #page-content-wrapper
    .container-fluid
      .row
        .col-lg-12
          = form_for @connection, url: {action: "create"} do |f|
            .form-group
              %label{:for => 'client'}
                = t('client')
              = f.collection_select :client_id, Client.order(:name_en),:id,:name_en, {prompt: "Select"}, {class: 'form-control'}
            .form-group
              %label{:for => 'pr'}
                = t('files_primary_type')
              = f.collection_select :files_primary_type_id, FilesPrimaryType.order(:name_en),:id,:name_en, {prompt: "Select"}, {class: 'form-control'}
            %button{:type => 'submit', :class => 'btn btn-default'}
              = t('save')


