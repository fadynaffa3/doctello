:javascript
  $('#setup_link').addClass('active');
= stylesheet_link_tag 'setup'
#wrapper
  = render partial: 'home/sidebar'
  #page-content-wrapper
    .container-fluid
      .row
        .col-lg-12
          = form_for @client, url: {action: "update"} do |f|
            .form-group
              %label{:for => 'client_type'}
                = t('client_type_english')
              = f.collection_select :client_type_id, ClientType.order(:name_en),:id,:name_en, {prompt: "Select"}, {class: 'form-control'}
            .form-group
              %label{:for => 'client_name_en'}
                = t('client_english')
              = f.text_field :name_en, id: 'client_name_en', class: 'form-control'
            .form-group
              %label{:for => 'client_name_ar'}
                = t('client_arabic')
              = f.text_field :name_ar, id: 'client_name_en', class: 'form-control'
            .form-group
              %label{:for => 'registration_number'}
                = t('registration_number')
              = f.text_field :registration_number, id: 'registration_number', class: 'form-control'
            .form-group
              %label{:for => 'client_date'}
                = t('client_date')
              = f.date_field :client_date, id: 'client_date', class: 'form-control'
            .form-group
              %label{:for => 'national_number'}
                = t('national_number')
              = f.text_field :national_number, id: 'national_number', class: 'form-control'
            .form-group
              %label{:for => 'income_tax_number'}
                = t('income_tax_number')
              = f.text_field :income_tax_number, id: 'income_tax_number', class: 'form-control'
            .form-group
              %label{:for => 'sales_tax_number'}
                = t('sales_tax_number')
              = f.text_field :sales_tax_number, id: 'sales_tax_number', class: 'form-control'
            .col-md-6
              %button{:type => 'submit', :class => 'btn btn-default'}
                = t('save')
          = form_for @client , :html => {:method => 'delete'}, url: {:method => 'delete', :action => 'destroy'} do |f|
            .col-md-6
              %button{:type => 'submit', :class => 'btn btn-danger'}
                = t('delete')


